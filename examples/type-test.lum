component TypeDemo() {
  // Type annotations on state
  state count: Int = 0
  state message: String = "Hello"
  state isActive: Bool = true

  fn increment() {
    count = count + 1
  }

  fn updateMessage(newMessage: String) {
    message = newMessage
  }

  <div style={({ padding: "20px" })}>
    <h1>{message}</h1>
    <p>"Count: "{count}</p>
    <button @click={increment}>"Increment"</button>
  </div>
}
